@model SistemaEleicao.Models.PageModels.CandidatoEdicao
@{
    ViewData["Title"] = "Editar Candidato";
}

@section Style {
    <link rel="stylesheet" href="~/css/editar_candidato.css" />
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
}

<div class="text-center">
    <h1 class="display-4">Edição de Candidato - @Model.Nome</h1>
</div>

<div class="d-flex justify-content-center">
    @using (Html.BeginForm("EditarCandidatoPost", "Candidato", FormMethod.Post, new { @class = "form-cadastro border", enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        @if (@ViewBag.MensagemErro != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.MensagemErro
            </div>
        }

        @if (@ViewBag.MensagemSucesso != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.MensagemSucesso
            </div>
        }

        @Html.TextBoxFor(model => model.CodEleicao, new { @Value = Model.CodEleicao, @type = "hidden" })
        @Html.TextBoxFor(model => model.CodCandidato, new { @Value = Model.CodCandidato, @type = "hidden" })
        @Html.TextBoxFor(model => model.ImagemPath, new { @Value = Model.ImagemPath, @type = "hidden" })

        <div class="form-group">
            @Html.LabelFor(model => model.Nome, "Nome*")
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @Value = Model.Nome, @placeholder = "Nome do candidato", @type = "titulo", @maxlength = "50" })
            @Html.ValidationMessageFor(model => model.Nome)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.GrupoPartido, "Grupo/Partido")
            @Html.TextBoxFor(model => model.GrupoPartido, new { @class = "form-control", @Value = Model.GrupoPartido, @placeholder = "Grupo/Partido do candidato", @maxlength = "50" })
            @Html.ValidationMessageFor(model => model.GrupoPartido)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Descricao, "Descrição*")
            @Html.TextAreaFor(model => model.Descricao, new { @class = "form-control", @Value = Model.Descricao, @placeholder = "Descrição do candidato", @maxlength = "255" })
            @Html.ValidationMessageFor(model => model.Descricao)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Imagem, "Foto do candidato (Atualmente: " + Model.ImagemAntiga + ")")
            @Html.TextBoxFor(model => model.Imagem, new { @class = "form-control-file", @type = "file" })
            @Html.ValidationMessageFor(model => model.Imagem)
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" value="submit" class="btn btn-info">Salvar Alterações</button>
        </div>
    }
</div>

<div class="text-left">
    <a type="button" class="btn btn-secondary" href="@Url.Action("PainelEleicao", "PainelEleicao", new { id = ViewBag.EleicaoId })">Voltar para o painel</a>
</div>