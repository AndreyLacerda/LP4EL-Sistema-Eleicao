@model SistemaEleicao.Models.PageModels.FormularioInscricao
@{
    ViewData["Title"] = "Criar Cargo";
}

@section Style {
    <link rel="stylesheet" href="~/css/form_inscricao.css" />
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
}

<div class="text-center">
    <h1 class="display-4">Inscrição - @ViewBag.EleicaoTitulo</h1>
</div>

<div class="d-flex justify-content-center">
    @using (Html.BeginForm("InscreverSeEleicao", "Inscricao", FormMethod.Post, new { @class = "form-cadastro border" }))
    {
        @Html.AntiForgeryToken()

        @if (@ViewBag.MensagemErro != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.MensagemErro
            </div>
        }

            @Html.HiddenFor(model => model.CodEleicao)

        <div class="form-group">
            @Html.LabelFor(model => model.ChaveAcesso, "Chave de Acesso*")
            @Html.TextBoxFor(model => model.ChaveAcesso, new { @class = "form-control", @placeholder = "Chave de Acesso", @type = "password", @maxlength = "100" })
            @Html.ValidationMessageFor(model => model.ChaveAcesso)
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" value="submit" class="btn btn-info">Inscrever-se</button>
        </div>
    }
</div>

<div class="text-left">
    <button type="button" class="btn btn-secondary" onclick="window.history.back();">
        Voltar
    </button>
</div>