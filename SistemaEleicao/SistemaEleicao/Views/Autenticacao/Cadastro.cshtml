@model SistemaEleicao.Models.PageModels.UsuarioCadastro
@{
    ViewData["Title"] = "Cadastro";
}

@section Style {
    <link rel="stylesheet" href="~/css/cadastro.css" />
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
}

<div class="text-center">
    <h1 class="display-4">Cadastro de Usuário</h1>
</div>

<div class="d-flex justify-content-center">
    @using (Html.BeginForm("Cadastrar", "Autenticacao", FormMethod.Post, new { @class = "form-cadastro border" }))
    {
        @Html.AntiForgeryToken()

        @if (@ViewBag.MensagemErro != null) {
            <div class="alert alert-danger" role="alert">
                @ViewBag.MensagemErro
            </div>
        }
        
        <div class="form-group">
            @Html.LabelFor(model => model.Email, "E-mail*")
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "E-mail", @type = "email", @maxlength = "100" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, "Nome*")
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Nome Completo", @maxlength = "100" })
            @Html.ValidationMessageFor(model => model.Nome)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Senha, "Senha*")
            @Html.TextBoxFor(model => model.Senha, new { @class = "form-control", @placeholder = "Senha", @type = "password", @maxlength = "100" })
            @Html.ValidationMessageFor(model => model.Senha)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmacaoSenha, "Confirmar Senha*")
            @Html.TextBoxFor(model => model.ConfirmacaoSenha, new { @class = "form-control", @placeholder = "Confirmação de Senha", @type = "password", @maxlength = "100" })
            @Html.ValidationMessageFor(model => model.ConfirmacaoSenha)
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" value="submit" class="btn btn-info">Cadastrar</button>
        </div>
    }
</div>