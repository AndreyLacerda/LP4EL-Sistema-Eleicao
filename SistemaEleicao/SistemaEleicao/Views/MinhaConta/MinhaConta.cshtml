@using Microsoft.AspNetCore.Http
@model SistemaEleicao.Models.PageModels.UsuarioAtualizacao
@{
    ViewData["Title"] = "MinhaConta";
}

@section Style {
    <link rel="stylesheet" href="~/css/cadastro.css" />
}

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js" type="text/javascript"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
}

<div class="text-center">
    <h1 class="display-4">Minha Conta</h1>
</div>

<div class="d-flex justify-content-center">
    @using (Html.BeginForm("Atualizar", "MinhaConta", FormMethod.Post, new { @class = "form-cadastro border" }))
    {
        @Html.AntiForgeryToken()

        @if (@ViewBag.MensagemErro != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.MensagemErro
            </div>
        }

        @if (@ViewBag.MensagemSucesso != null)
        {
            <div class="alert alert-success" role="alert">
                @ViewBag.MensagemSucesso
            </div>
        }

        <div class="form-group">
            @Html.LabelFor(model => model.Email, "E-mail*")
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @Value = Model.Email, @placeholder = "E-mail", @type = "email", @maxlength = "100" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Nome, "Nome*")
            @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @Value = Model.Nome, @placeholder = "Nome Completo", @maxlength = "100" })
            @Html.ValidationMessageFor(model => model.Nome)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.SenhaAtual, "Senha Atual*")
            @Html.TextBoxFor(model => model.SenhaAtual, new { @class = "form-control", @placeholder = "Senha", @type = "password", @maxlength = "100" })
            @Html.ValidationMessageFor(model => model.SenhaAtual)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Senha, "Senha")
            @Html.TextBoxFor(model => model.Senha, new { @class = "form-control", @placeholder = "Nova Senha", @type = "password", @maxlength = "100" })
            @Html.ValidationMessageFor(model => model.Senha)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ConfirmacaoSenha, "Confirmar Senha")
            @Html.TextBoxFor(model => model.ConfirmacaoSenha, new { @class = "form-control", @placeholder = "Confirmação da Nova Senha", @type = "password", @maxlength = "100" })
            @Html.ValidationMessageFor(model => model.ConfirmacaoSenha)
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" value="submit" class="btn btn-info">Atualizar dados</button>
        </div>
    }
</div>